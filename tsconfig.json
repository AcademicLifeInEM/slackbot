{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": false,
        "declaration": false,
        "noImplicitAny": false,
        "noImplicitUseStrict": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "dist",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowJs": true,
        "sourceMap": true
    },
    "filesGlob": [
        "index.ts",
        "{bot,routes,helpers}/**/*.ts",
        "types/*.d.ts",
        "node_modules/@types/**/*index.d.ts"
    ],
    "compileOnSave": false,
    "buildOnSave": false
}
