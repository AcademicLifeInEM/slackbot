{
    "extends": "tslint:latest",
    "rules": {
        "arrow-parens": [
            true, "ban-single-arg-parens"
        ],
        "interface-name": [
            false
        ],
        "one-line": [
            true, "check-open-brace", "check-whitespace"
        ],
        "only-arrow-functions": [
            true, "allow-declarations", "allow-named-functions"
        ],
        "no-namespace": [
            false
        ],
        "quotemark": [
            true, "single", "jsx-double", "avoid-escape"
        ]
    }
}
